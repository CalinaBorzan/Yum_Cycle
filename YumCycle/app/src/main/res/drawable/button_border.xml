<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Border properties -->
    <stroke
            android:width="2dp"
            android:color="#000000" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Padding inside the button -->
    <padding
            android:left="8dp"
            android:top="8dp"
            android:right="8dp"
            android:bottom="8dp" />
</shape>